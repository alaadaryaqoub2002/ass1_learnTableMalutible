<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X1"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button02" />

    <Button
        android:id="@+id/button02"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X2"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button03"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button03"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X3"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/button02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button04"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X4"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button05" />

    <Button
        android:id="@+id/button05"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X5"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/button04"
        app:layout_constraintEnd_toStartOf="@id/button06"
        app:layout_constraintTop_toBottomOf="@id/button02" />

    <Button
        android:id="@+id/button06"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X6"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/button05"
        app:layout_constraintTop_toBottomOf="@id/button03"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button07"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X7"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button04"
        app:layout_constraintEnd_toStartOf="@id/button08" />

    <Button
        android:id="@+id/button08"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X8"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/button07"
        app:layout_constraintEnd_toStartOf="@id/button09"
        app:layout_constraintTop_toBottomOf="@id/button05" />

    <Button
        android:id="@+id/button09"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X9"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/button08"
        app:layout_constraintTop_toBottomOf="@id/button06"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button10"
        android:layout_width="117dp"
        android:layout_height="129dp"
        android:text="X10"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button08" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/button10"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select item to learn"
        android:background="@color/black"
        android:textSize="23dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
